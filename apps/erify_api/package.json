{
  "name": "erify_api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=production nest start",
    "dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "db:migrate:create": "npx prisma migrate dev --create-only",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:migrate:reset": "npx prisma migrate reset --force --skip-generate --skip-seed",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:format": "npx prisma format",
    "db:validate": "npx prisma validate",
    "test:generate:schedule-payload": "ts-node -r tsconfig-paths/register test-payloads/scripts/generate-schedule-payload.ts",
    "test:create:schedules": "ts-node -r tsconfig-paths/register test-payloads/scripts/schedule-planning-flow/1.create-schedules.ts",
    "test:upload:schedule-plans": "ts-node -r tsconfig-paths/register test-payloads/scripts/schedule-planning-flow/2.upload-schedule-plan-documents.ts",
    "test:validate:schedules": "ts-node -r tsconfig-paths/register test-payloads/scripts/schedule-planning-flow/3.validate-schedules.ts",
    "test:publish:schedules": "ts-node -r tsconfig-paths/register test-payloads/scripts/schedule-planning-flow/4.publish-schedules.ts",
    "test:schedule:all": "ts-node -r tsconfig-paths/register test-payloads/scripts/workflows/schedule-planning/run-all.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.1",
    "@prisma/client": "^6.14.0",
    "@scalar/nestjs-api-reference": "^1.0.5",
    "dotenv": "^16.6.1",
    "helmet": "^8.1.0",
    "nanoid": "^5.1.5",
    "nestjs-pino": "^4.4.0",
    "nestjs-zod": "^5.0.1",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.0.17",
    "zod-openapi": "^5.4.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.25.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.5.3",
    "prisma": "^6.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/.pnpm/(?!(ts-jest)/)",
      "<rootDir>/node_modules/(?!.pnpm|ts-jest)"
    ],
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
