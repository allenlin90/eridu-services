{
  "name": "eridu-auth",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:frontend": "vite",
    "build": "tsc && tsc-alias && vite build",
    "build:frontend": "vite build",
    "build:backend": "tsc && tsc-alias",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:frontend": "tsc --project tsconfig.frontend.json --noEmit",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "auth:schema": "npx @better-auth/cli generate --output src/db/schema/auth-schema.ts",
    "db:check": "npx drizzle-kit check",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
    "db:seed": "cross-env DB_SEEDING=true tsx src/db/seed.ts",
    "studio": "npx drizzle-kit studio"
  },
  "dependencies": {
    "@better-auth/sso": "^1.3.34",
    "@eridu/ui": "workspace:*",
    "@hono/node-server": "^1.14.1",
    "better-auth": "^1.3.34",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.6",
    "jose": "^6.0.11",
    "pg": "^8.14.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.26.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eridu/eslint-config": "workspace:*",
    "@eridu/typescript-config": "workspace:*",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.12",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.30.6",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
