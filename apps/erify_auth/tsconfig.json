{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "!src/frontend/**/*"
  ],
  "exclude": ["node_modules", "src/frontend"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true
  }
}
