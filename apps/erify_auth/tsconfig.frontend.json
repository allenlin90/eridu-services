{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node", "react", "react-dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "outDir": "dist/frontend",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/frontend/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES6"]
  },
  "include": [
    "src/frontend/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
