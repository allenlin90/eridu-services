{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npx turbo run build --filter=erify_api"
  },
  "deploy": {
    "preDeployCommand": ["pnpm --filter erify_api db:migrate:deploy"], 
    "startCommand": "pnpm --filter erify_api start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
