{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npx turbo run build --filter=eridu_auth"
  },
  "deploy": {
    "preDeployCommand": ["pnpm --filter eridu_auth db:migrate"],
    "startCommand": "pnpm --filter eridu_auth start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
