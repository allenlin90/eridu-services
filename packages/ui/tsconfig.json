{
  "extends": "@eridu/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@eridu/ui/*": ["./src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [".", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
