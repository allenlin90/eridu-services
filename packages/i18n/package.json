{
  "name": "@eridu/i18n",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Shared i18n translations for Eridu Services",
  "keywords": [
    "i18n",
    "translations",
    "paraglide"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "generate": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide",
    "build": "npm run generate && tsc --skipLibCheck",
    "dev": "npm run generate && chokidar \"messages/**/*.json\" \"project.inlang/**/*\" -c \"npm run generate\"",
    "prepare": "npm run generate",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "@eridu/eslint-config": "workspace:*",
    "@eridu/typescript-config": "workspace:*",
    "@inlang/paraglide-js": "^2.0.0",
    "@types/node": "^24.10.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3"
  }
}
